{
  "compilerOptions": {
    "target": "es2017", // Ensures compatibility with top-level await
    "module": "es2022", // Updated to support top-level await
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}